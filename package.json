{
  "name": "qiao-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "build": "lerna run build",
    "prettier": "qpro prettier",
    "eslint": "qpro eslint",
    "test": "lerna run test",
    "lint": "npm run build && npm run test && npm run prettier && npm run eslint",
    "postinstall": "npm run lint",
    "cz": "qpro commitizen",
    "pb": "lerna publish",
    "graph": "nx graph",
    "check": "ncu && lerna exec ncu --concurrency=1",
    "update": "ncu -u && lerna exec 'ncu -u' --concurrency=1",
    "pkg": "qlerna pkg ./packages",
    "dpkg": "qlerna pkg ./packages dev"
  },
  "devDependencies": {
    "@rollup/plugin-json": "^6.0.1",
    "@rollup/plugin-node-resolve": "^15.2.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@commitlint/cli": "^17.7.2",
    "@commitlint/config-conventional": "^17.7.0",
    "ava": "^5.3.1",
    "fake-indexeddb": "^4.0.2",
    "husky": "^8.0.3",
    "jsdom": "^22.1.0",
    "lerna": "^7.3.0",
    "lint-staged": "^14.0.1",
    "nx": "^16.10.0",
    "qiao-lerna": "^4.0.8",
    "qiao-webpack": "^4.0.7",
    "qiao-project": "^4.0.7",
    "rollup": "^4.0.2"
  }
}
