        "eslint-plugin-react-hooks": "^4.6.0",
        "jest": "^29.2.2",
        "jest-environment-jsdom": "^29.2.2",
        "qiao-lerna": "^1.0.9",
        "qiao-webpack": "^1.2.4",
        "rollup": "^3.2.5"
    }
