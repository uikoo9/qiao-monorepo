{
  "name": "qiao-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "build": "lerna run build",
    "prettier": "qpro prettier",
    "eslint": "qpro eslint",
    "test": "lerna run test",
    "lint": "npm run build && npm run test && npm run prettier && npm run eslint",
    "postinstall": "npm run lint",
    "cz": "qpro commitizen",
    "pb": "lerna publish",
    "graph": "nx graph",
    "check": "ncu && lerna exec ncu --concurrency=1",
    "update": "ncu -u && lerna exec 'ncu -u' --concurrency=1",
    "pkg": "qpro pkg ./packages",
    "dpkg": "qpro pkg ./packages dev"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "ava": "^6.0.1",
    "husky": "^8.0.3",
    "lerna": "^8.0.2",
    "lint-staged": "^15.2.0",
    "npm-check-updates": "^16.14.12",
    "nx": "^17.2.8",
    "qiao-project": "^4.3.6"
  }
}
