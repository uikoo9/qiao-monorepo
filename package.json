{
  "name": "qiao-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "build": "lerna run build",
    "prettier": "prettier --write .",
    "eslintfix": "eslint . --ext .js --fix",
    "test": "lerna run test",
    "lint": "npm run build && npm run prettier && npm run eslintfix && npm run test",
    "postinstall": "npm run lint",
    "pb": "lerna publish",
    "graph": "nx graph",
    "check": "ncu && lerna exec ncu --concurrency=1 --ignore=qiao-oss",
    "update": "ncu -u && lerna exec 'ncu -u' --concurrency=1 --ignore=qiao-oss",
    "pkg": "qlerna pkg ./packages",
    "dpkg": "qlerna pkg ./packages dev"
  },
  "devDependencies": {
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.6.1",
    "jest-environment-jsdom": "^29.6.1",
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "ava": "^5.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "fake-indexeddb": "^4.0.1",
    "husky": "^8.0.3",
    "jsdom": "^22.1.0",
    "lerna": "^7.1.3",
    "lint-staged": "^13.2.3",
    "nx": "^16.5.1",
    "prettier": "^3.0.0",
    "qiao-lerna": "^3.3.7",
    "qiao-webpack": "^3.3.7",
    "rollup": "^3.26.2"
  }
}
