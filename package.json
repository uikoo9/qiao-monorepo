{
  "name": "root",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "check": "qlerna ncu ./packages",
    "ncu": "lerna exec --ignore=qiao-cli 'ncu -u'",
    "clean": "lerna clean -y && lerna exec 'rm -rf package-lock.json'",
    "init": "lerna bootstrap --hoist",
    "build": "lerna run build",
    "prettier": "prettier --write .",
    "eslintfix": "eslint . --ext .js --fix",
    "lint": "npm run prettier && npm run eslintfix",
    "test": "lerna run test",
    "postinstall": "npm run clean && npm run init && npm run build && npm run lint && npm run test",
    "dc": "qlerna dc ./packages",
    "ls": "lerna ls -l",
    "pkg": "qlerna pkg ./packages",
    "dpkg": "qlerna pkg ./packages 1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.4",
    "qiao-lerna": "^2.0.0",
    "qiao-webpack": "^1.4.1",
    "rollup": "^3.19.1"
  }
}
